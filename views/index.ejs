					<select class="custom-select-box" id="priceFilter">
						<option value="">All Prices</option>
						<% if (minPrice && maxPrice) { %>
							<option value="<%= minPrice %>" <%=price==minPrice ? 'selected' : '' %>>Up to <%= minPrice
									%>
							</option>
							<option value="<%= maxPrice / 2 %>" <%=price==maxPrice / 2 ? 'selected' : '' %>>Up to <%=
									maxPrice / 2 %>
							</option>
							<option value="<%= maxPrice %>" <%=price==maxPrice ? 'selected' : '' %>>Up to <%= maxPrice
									%>
							</option>
							<option value="<%= maxPrice + 1 %>" <%=price==maxPrice + 1 ? 'selected' : '' %>>Above <%=
									maxPrice %>
							</option>
							<% } %>
					</select>
				</div>




				<div class="col-lg-2 col-md-12 text-lg-end text-center mt-md-2 mt-lg-0">
					<button class="custom-search-button" onclick="filterTours()">Search</button>
				</div>
			</div>
		</div>
	</div>

	<script>
		function filterTours() {
			const titleFilter = document.getElementById('titleFilter').value;
			const priceFilter = document.getElementById('priceFilter').value;

			let url = '/search?';

			if (titleFilter) {
				url += `title=${titleFilter}&`;
			}

			if (priceFilter) {
				url += `price=${priceFilter}`;
			}

			window.location.href = url; // redirect to the filtered URL
		}

	</script>
