				<!-- Filter by Tour-title -->
				<div class="col-lg-4 col-md-6">
					<select class="custom-select-box" id="titleFilter">
						<option value="">All tours</option>
						<% allTitles.forEach(title=> { %>
							<option value="<%= title.title %>" <%=title.title===title ? 'selected' : '' %>>
