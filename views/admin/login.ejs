<div class="container">
  <h2>Login</h2>
  <!-- Error message here -->
  <div id="error-message" class="error" style="display: none;">Invalid username or password. Please try again.</div>

  <form action="/admin/login" method="POST" id="login-form">
    <input type="text" name="username" placeholder="Username" required>
    <input type="password" name="password" placeholder="Password" required>

    <button type="submit" class="signin"><span>Sign In</span></button>
  </form>

  <h3 class="msg-sig">Login successful!</h3>
  <div class="sig"></div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  $(document).ready(function () {
    $('#login-form').on('submit', function (e) {
      e.preventDefault(); // Prevent form from submitting immediately

      // Dummy validation for example (replace with actual validation logic)
      const username = $('input[name="username"]').val();
      const password = $('input[name="password"]').val();

      if (username === "admin" && password === "admin123") {
        // Simulate successful login
        $('.sig').css({
          'transform': 'translateY(40%) scale(5)',
          'border-radius': '0',
          'width': '100%',
          'height': '100%'
        });

        $('.msg-sig').css({
          'top': '40%',
          'z-index': '8'
        });

        setTimeout(function () {
          window.location.href = 'dashboard'; // Redirect to dashboard after success
        }, 2000); // 2 seconds delay for effect
      } else {
        // Show error message if login fails
        $('#error-message').fadeIn();
      }
    });
  });
</script>
</body>
</html>
