<%- include('../partials/header') %>

<!doctype html>
<html lang="en">

<head>
	<title>
		<%= blog.title %>
	</title>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

	<style>
		body {
			font-family: 'Segoe UI', sans-serif;
			background-color: #2b2e33;
			color: #333;
		}

		.card-blog {
			background: #fff;
			border-radius: 15px;
			box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
			overflow: hidden;
			margin: 60px auto;
			max-width: 900px;
			display: flex;
			flex-direction: row;
			transition: transform 0.3s ease;
		}

		.card-blog:hover {
			transform: translateY(-5px);
		}

		.card-image {
			width: 50%;
			object-fit: cover;
		}

		.card-content {
			padding: 30px;
			width: 50%;
		}

		.card-content h2 {
			font-size: 1.5rem;
			font-weight: bold;
		}

		.card-content .author {
			margin-top: 10px;
			margin-bottom: 15px;
		}

		.card-content .author i {
			margin-right: 6px;
		}

		.card-content p {
			font-size: 1rem;
			color: #555;
		}

		.card-footer {
			display: flex;
			justify-content: space-between;
			align-items: center;
			padding: 15px 30px;
			background: linear-gradient(to bottom, #fff, #f7f7f7);
		}

		.card-footer .icons i {
			margin: 0 10px;
			cursor: pointer;
			color: #888;
			transition: color 0.2s;
		}

		.card-footer .icons i:hover {
			color: #007bff;
		}

		.date-box {
			text-align: center;
		}

		.date-box h1 {
			font-size: 2.5rem;
			color: #999;
			margin: 0;
		}

		.date-box span {
			font-size: 1rem;
			color: #aaa;
			text-transform: uppercase;
		}

		.down-btn {
			position: absolute;
			bottom: -25px;
			left: 50%;
			transform: translateX(-50%);
			background: #007bff;
			color: white;
			border-radius: 50%;
			width: 50px;
			height: 50px;
			text-align: center;
			line-height: 50px;
			font-size: 1.5rem;
			box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
		}
	</style>
</head>

<body>

	<div class="position-relative">
		<div class="card-blog">

			<!-- Image Section -->
			<% if (blog.image_url) { %>
				<img src="<%= blog.image_url %>" alt="<%= blog.title %>" class="card-image">
			<% } %>

			<!-- Content Section -->
			<div class="card-content">
				<h2>
					<%= blog.title %>
				</h2>
				<div class="author text-primary">
					<i class="fas fa-user-circle"></i>
					<%= blog.author || 'Unknown Author' %>
				</div>
				<p>
					<%= blog.content %>
				</p>
			</div>
		</div>

		<!-- Footer -->
		<div class="card-footer">
			<div class="date-box">
				<h1>
					<%= new Date(blog.published_date).getDate() %>
				</h1>
				<span>
					<%= new Date(blog.published_date).toLocaleString('default', { month: 'long' }).toUpperCase() %>
				</span>
			</div>
			<div class="icons">
				<i class="far fa-eye"></i>
				<i class="far fa-heart"></i>
				<i class="far fa-envelope"></i>
				<i class="fas fa-share-alt"></i>
			</div>
		</div>

		<!-- Down Arrow -->
		<!-- <a href="/">
			<div class="down-btn">
				<i class="fas fa-arrow-down"></i>
			</div>
		</a> -->
	</div>

</body>

</html>
<%- include('../partials/footer') %>
